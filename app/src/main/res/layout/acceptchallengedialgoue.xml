<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textaccepted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="The challenge has been accepted!"
            android:textColor="#073B4C"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/congrats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Congratulations"
            android:textColor="#073B4C"
            android:textSize="15dp"
            android:visibility="invisible" />


        <TextView
            android:id="@+id/challengeaccepted1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:text="Drop everything youâ€™re doing and take  \n        a 5 minute walk in your space,\n               wherever you are."
            android:textColor="#073B4C" />

        <TextView
            android:id="@+id/challengeaccepted2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:text="Call a close friend or family and tell \n    them how much you miss them! Show \n          them some love and support."
            android:textColor="#073B4C"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/wishtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:text="You just earned +2XP and a new habit \n                    to continue for all the days from now \n                      on. Keep it up!"
            android:textColor="#073B4C"
            android:visibility="invisible" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/challengeCompleted"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@id/challengeaccepted2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/roundbutton"
            android:backgroundTint="#A8D9D2"
            android:text="I Completed the Challenge"
            android:textAllCaps="false"
            android:textColor="#396270" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/ChallengeDone"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@id/challengeaccepted2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/roundbutton"
            android:backgroundTint="#A8D9D2"
            android:text="Done"
            android:textAllCaps="false"
            android:textColor="#396270"
            android:visibility="invisible" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>