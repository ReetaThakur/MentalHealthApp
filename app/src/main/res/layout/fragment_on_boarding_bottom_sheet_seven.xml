<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".splashandonboarding.OnBoardingBottomSheetFragmentSeven">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:foregroundGravity="bottom"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="35dp"
                android:text="How much does this bother you?"
                android:textColor="@color/black"
                android:textSize="18sp"/>
            <Button
                android:id="@+id/btn_Extremely7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#A7A5AD"
                android:textColor="@color/white"
                android:text="Extremely"
                android:textSize="16sp"
                android:padding="14dp"
                android:textAllCaps="false"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="30dp"/>
            <Button
                android:id="@+id/btn_Considerably7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#A7A5AD"
                android:textColor="@color/white"
                android:text="Considerably"
                android:textSize="16sp"
                android:padding="14dp"
                android:textAllCaps="false"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="10dp"/>
            <Button
                android:id="@+id/btn_Slightly7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#A7A5AD"
                android:textColor="@color/white"
                android:text="Slightly"
                android:textSize="16sp"
                android:padding="14dp"
                android:textAllCaps="false"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="10dp"/>
            <Button
                android:id="@+id/btn_NotAtAll7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint = "#A7A5AD"
                android:textColor="@color/white"
                android:text="Not at all"
                android:textSize="16sp"
                android:padding="14dp"
                android:textAllCaps="false"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="10dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>