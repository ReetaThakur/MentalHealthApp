<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardCornerRadius="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="UseCompoundDrawables">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content" >
        <ImageButton
            android:id="@+id/btn_cancel_Dialogue_MyNursery"
            android:layout_width="wrap_content"
            android:layout_margin="10dp"
            android:layout_gravity="end"
            android:background="@android:color/transparent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_cancel"/>
        <ImageView
            android:id="@+id/iv_Dialogue_MyNurseryGif"
            android:layout_width="wrap_content"
            android:layout_height="260dp"
            android:layout_gravity="center"
            android:padding="8dp"
            android:contentDescription="@string/todo" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:text="Monstera is native to tropical rainforests from southern Mexico to Panama so it comes as no surprise that it favours a warm, humid environment, making them ideal for indoors."
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16sp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>