<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_gravity="center"
        app:cardCornerRadius="12dp"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/leaves_for_dialoagbox"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add a Habit"
                android:fontFamily="@font/nunito_extralight"
                android:textColor="@color/forAllTexts"
                android:textSize="24sp"
                android:layout_marginTop="16dp"
                android:textAlignment="center"
                android:textStyle="normal"
                android:textFontWeight="600"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/cancle"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="331dp"
            android:layout_height="48dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/dialoag_button"
            android:text="Create a habit"
            android:id="@+id/btnCreateHabit"
            android:layout_marginEnd="10dp"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#25A18E"
            android:textFontWeight="600"
            android:textSize="22sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Or explore habits from below"
            android:textSize="18sp"
            android:fontFamily="@font/nunito_extralight"
            android:textColor="@color/forAllTexts"
            android:textFontWeight="400"
            android:textAlignment="center"
            android:layout_marginTop="30dp"
            android:textStyle="normal"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/Firstview"
            android:layout_width="331dp"
            android:layout_height="112dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="#B0DADF"
            app:cardCornerRadius="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Productivity Habits"
                android:textSize="18sp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:textColor="@color/tab_indicator"
                android:textStyle="normal"
                android:fontFamily="@font/nunito_extralight"
                android:textFontWeight="600"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(21 habits)"
                android:textSize="14sp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="55dp"
                android:textColor="@color/tab_indicator"
                android:textStyle="normal"
                android:fontFamily="@font/nunito_extralight"
                android:textFontWeight="600"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back"
                android:layout_marginTop="18dp"
                android:layout_marginStart="300dp"/>
        </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="331dp"
                android:layout_height="112dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="#A8D9D2"
                app:cardCornerRadius="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Better Sleep"
                    android:textSize="18sp"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="24dp"
                    android:textColor="@color/tab_indicator"
                    android:textStyle="normal"
                    android:fontFamily="@font/nunito_extralight"
                    android:textFontWeight="600"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(05 habits)"
                    android:textSize="14sp"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="55dp"
                    android:textColor="@color/tab_indicator"
                    android:textStyle="normal"
                    android:fontFamily="@font/nunito_extralight"
                    android:textFontWeight="600"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/back"
                    android:layout_marginTop="18dp"
                    android:layout_marginStart="300dp"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="331dp"
                android:layout_height="112dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="#CDD8DB"
                app:cardCornerRadius="12dp"
                android:layout_marginBottom="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Self Love habits"
                    android:textSize="18sp"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="24dp"
                    android:textColor="@color/tab_indicator"
                    android:textStyle="normal"
                    android:fontFamily="@font/nunito_extralight"
                    android:textFontWeight="600"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(10 habits)"
                    android:textSize="14sp"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="55dp"
                    android:textColor="@color/tab_indicator"
                    android:textStyle="normal"
                    android:fontFamily="@font/nunito_extralight"
                    android:textFontWeight="600"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/back"
                    android:layout_marginTop="18dp"
                    android:layout_marginStart="300dp"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        </androidx.cardview.widget.CardView>


</LinearLayout>

